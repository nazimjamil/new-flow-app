{
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": [
    "airbnb",
    "plugin:react/recommended"
  ],
  "globals": {
    "describe": true,
    "document": true,
    "expect": true,
    "it": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "arrow-body-style": 1,
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": true
    }],
    "import/prefer-default-export": 0,
    "newline-after-var": ["error", "always"],
    "sort-keys": ["error", "asc", {
      "caseSensitive": true,
      "natural": true
    }]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": [
          ".",
          "src",
          "node_modules"
        ]
      }
    }
  }
}
