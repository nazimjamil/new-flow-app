{
  "name": "new-flow-app",
  "version": "1.2.0",
  "main": "app/index.jsx",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --config ./webpack/webpack.dev.babel.js",
    "build": "yarn run trash dist && yarn webpack --config ./webpack/webpack.production.babel.js",
    "postbuild": "yarn run react-snap",
    "prepublish": "yarn run build",
    "postinstall": "yarn run flow:stub",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "yarn run eslint --config .eslintrc.json --ext .jsx --ext .js app __tests__ && yarn run flow",
    "flow:stub": "yarn run flow-typed install",
    "start:dist": "yarn run simple-server dist 8080"
  },
  "dependencies": {
    "react": "^16.3.2",
    "react-document-title": "^2.0.3",
    "react-dom": "^16.3.2",
    "react-router-dom": "^4.3.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-flowtype": "^3.6.1",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "flow-bin": "^0.97.0",
    "flow-typed": "^2.4.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^22.4.3",
    "mini-css-extract-plugin": "^0.4.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.4",
    "react-snap": "^1.12.2",
    "simple-server": "^1.1.1",
    "style-loader": "^0.21.0",
    "trash-cli": "^1.4.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15",
    "webpack-dev-server": "^3.1.3",
    "webpack-merge": "^4.1.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/app/**/*.{js,jsx}"
    ],
    "coverageDirectory": "<rootDir>/dist/__coverage__",
    "moduleDirectories": [
      ".",
      "app",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "notify": true,
    "roots": [
      "<rootDir>/__tests__/unit"
    ],
    "setupFiles": [
      "<rootDir>/__tests__/jest.config.js"
    ]
  },
  "reactSnap": {
    "source": "dist"
  }
}
